<section class="container-fluid position-relative" style="margin-top: 130px; min-height: 100vh;">
    <div class="row">
        <div class="col-5 d-flex flex-column justify-content-between">
            <h1 class="fw-light text-uppercase  position-absolute ps-5"
                style="font-size: 7rem; left: 0; z-index: 1; line-height: 10rem;letter-spacing: 1rem;">
                Contact Hafamex <br> Farm
            </h1>
            <p class="text-wrap w-75 ps-5" style="margin-top: 350px;">For more information on our services and a
                <span class="fw-bold text-primary">free</span> quotation, feel free to contact us.
            </p>
            <div class="ps-5 mt-5">
                <hr style="width:200px; height:4px; background-color:black; border:none;" />
            </div>

            @* Bussiness Hours *@
            <div class="ps-4 mt-5">
                <div class="icon-content d-flex align-items-center gap-2">
                    <svg width="40" height="40" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50" cy="50" r="40" stroke="#c47c48" stroke-width="3" fill="none" />
                        <line x1="50" y1="50" x2="50" y2="30" stroke="#c47c48" stroke-width="3"
