                    </svg>
                    <h3 class="fw-bold text-dark mb-0">Business Hours</h3>
                </div>
                <p class="fs-6 fw-light ms-5 mt-1">24/7</p>
            </div>
            @* Contact Info *@
            <div class="ps-4 #c47c48 mt-3">
                <div class="icon-content d-flex align-items-center gap-2">
                    <svg width="40" height="40" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <!-- Vòng tròn ngoài -->
                        <circle cx="50" cy="50" r="40" stroke="#c47c48" stroke-width="3" fill="none" />

                        <!-- Hình bao thư -->
                        <rect x="25" y="35" width="50" height="30" stroke="#c47c48" stroke-width="3" fill="none" />

                        <!-- Đường gập phong bì -->
                        <polyline points="25,35 50,55 75,35" stroke="#c47c48" stroke-width="3" fill="none" />
                    </svg>
                    <h3 class="fw-bold text-dark mb-0">Contact Info</h3>
                </div>
                <p class="fs-6 fw-light ms-5 mt-1">(+84) 898 678 356</p>
                <p class="fs-6 fw-light ms-5 mt-1">info@gmail.com</p>
            </div>
            @*Address*@
            <div class="ps-4 #c47c48 mt-3">
                <div class="icon-content d-flex align-items-center gap-2">
                    <svg width="40" height="40" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <!-- Vòng tròn ngoài -->
                        <circle cx="50" cy="50" r="40" stroke="#c47c48" stroke-width="3" fill="none" />

                        <!-- Hình bao thư -->
                        <rect x="25" y="35" width="50" height="30" stroke="#c47c48" stroke-width="3" fill="none" />

                        <!-- Đường gập phong bì -->
                        <polyline points="25,35 50,55 75,35" stroke="#c47c48" stroke-width="3" fill="none" />
                    </svg>
